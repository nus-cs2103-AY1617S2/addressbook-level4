<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox opacity="1.00" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@../../../../bin/view/DarkTheme.css" />
      <URL value="@../../../../bin/view/Extensions.css" />
   </stylesheets>
   <children>
      <MenuBar opacity="1.00" VBox.vgrow="NEVER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <SplitPane id="splitPane" fx:id="splitPane" dividerPositions="0.4" VBox.vgrow="ALWAYS">
         <items>
            <VBox fx:id="personList" minWidth="340" prefWidth="340">
               <children>
                  <TextField alignment="CENTER" editable="false" style="-fx-background-color: #ff0000; -fx-font-weight: bold;" stylesheets="@DarkTheme.css" text="Uncompleted" />
                  <AnchorPane fx:id="taskListPanelPlaceholder" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding></AnchorPane>
               </children>
            </VBox>
            <VBox>
               <children>
                  <TextField alignment="CENTER" editable="false" style="-fx-background-color: #32cd32; -fx-font-weight: bold;" stylesheets="@DarkTheme.css" text="Completed" VBox.vgrow="ALWAYS" />
                  <AnchorPane fx:id="completedTaskListPlaceholder" prefWidth="340" VBox.vgrow="ALWAYS">
                      <padding>
                          <Insets bottom="10" left="10" right="10" top="10" />
                      </padding>
                  </AnchorPane>
                  <AnchorPane fx:id="commandBoxPlaceholder" styleClass="anchor-pane-with-border" VBox.vgrow="NEVER">
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </AnchorPane>
                  <AnchorPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
                   <AnchorPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" opacity="0.8" prefHeight="100" styleClass="anchor-pane-with-border" VBox.vgrow="NEVER">
                       <padding>
                           <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                       </padding>
                     <effect>
                        <Blend mode="LIGHTEN" opacity="0.5" />
                     </effect>
                   </AnchorPane>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
</VBox>
